
<section id="services">
<div class="container wow fadeIn" id="news">
    <div class="section-header">
        <h3 class="section-title">Lates News</h3>
        <p class="section-description"></p>
      </div>

      {% if latest_news %}
  <div class="row blog">
      <div class="col-md-12">
    
        
          <div id="blogcarousel" class="carousel slide" data-ride="carousel">

             <!-- Carousel items -->
              <div class="carousel-inner">

                  <div class="carousel-item {% if loop.index is divisibleby 3 %}active{% endif %}" id="#blogcarousel">
                      <div class="row">
                            {% for news in latest_news[0:4] %}
                        <div class="col-md-3">
                            <div class="card">
                                <div class="card-img-top card-img-top-248">
                                    <img class="img-fluid" src="{{ news.news_image }}">
                                </div>
                                <div class="card-body">
                                        <h5 class="card-title">{{ news.news_title }}</h5>
                                        <p class="card-text">{{ news.news_details }}</p>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                        </div>
                       
                  </div>  <!--.item-->
         
              </div>
            

            <a class="carousel-control-prev" href="#blogcarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#blogcarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
              <!--.carousel-inner-->
            </div>   <!--.Carousel-->
       
      </div> 
    </div>  <!--.Row Blog-->
    {% endif %}

</div>   <!--.Container-->
</section>
